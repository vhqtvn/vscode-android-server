#!/bin/bash

ADDITIONAL_ARGS=
case $ANDROID_ARCH in
    arm|armeabi-v7a)
        ADDITIONAL_ARGS="$ADDITIONAL_ARGS -m32"
        ;;
    x86)
        ADDITIONAL_ARGS="$ADDITIONAL_ARGS -m32"
        ;;
    x86_64)
        ;;
    arm64|aarch64)
        ;;
    *)
        echo "Unsupported arch $ANDROID_ARCH"
        exit 1
        ;;
esac

/usr/bin/g++-6 $ADDITIONAL_ARGS "$@"